{
  "name": "text-highlight-saver",
  "displayName": "Text Highlight Saver",
  "version": "1.0.0",
  "description": "Highlight text on any webpage and save highlights locally with a modern UI",
  "author": "Shriyansh",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "overrides": {
    "@swc/helpers@~0.4": "0.4.36"
  },
  "dependencies": {
    "plasmo": "0.88.0",
    "pnpm": "9.4.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.4",
    "react-icons": "5.2.1",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.3.0",
    "@types/chrome": "0.0.268",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "postcss": "8.4.38",
    "prettier": "3.3.2",
    "typescript": "5.5.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab"
    ]
  }
}
